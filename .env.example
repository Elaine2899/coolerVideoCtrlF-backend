# API 設定
API_VERSION=1.0.0

# Database Settings
DATABASE_URL=postgresql://user:password@host:port/dbname

# ChromaDB Settings
CHROMA_HOST=your-chroma-host
CHROMADB_URL=https://your-chroma-url
CHROMA_INTERNAL_HOST=your-internal-host
CHROMA_PORT=443
CHROMA_SSL=true

# Retry Settings
CHROMA_RETRIES=5
CHROMA_RETRY_DELAY=5

# Other Settings
DEBUG=false
CORS_ORIGINS=*

# CORS 設定
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=*

# 安全性設定
SECRET_KEY=generate-a-secure-random-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 快取設定 (選用)
# REDIS_URL=redis://localhost:6379
# CACHE_EXPIRE_IN_SECONDS=3600